#!/usr/bin/perl

use strict;
use warnings;

use Getopt::Long qw/ GetOptions /;
use Path::Tiny qw/ path /;
use lib './lib';
use App::Deps::Verify ();

my $out_fn;
my $modules_fn;

GetOptions(
    'o|output=s'     => \$out_fn,
    'modules-conf=s' => \$modules_fn,
) or die "Failed - $!";

App::Deps::Verify->new->verify_deps_in_yaml($modules_fn);

path($out_fn)->spew_utf8("Success!");

exit(0);
