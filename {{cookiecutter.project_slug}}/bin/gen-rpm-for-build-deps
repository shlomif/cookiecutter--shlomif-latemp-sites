#!/usr/bin/perl

use strict;
use warnings;
use autodie;

use lib './lib';
use App::Deps::Verify ();

use Getopt::Long qw/ GetOptions /;

my $out_fn;
my $modules_fn = 'bin/required-modules.yml';

GetOptions(
    'o|output=s'     => \$out_fn,
    'modules-conf=s' => \$modules_fn,
) or die "Failed - $!";

App::Deps::Verify->new->write_rpm_spec_from_yaml_file( $modules_fn, $out_fn );
